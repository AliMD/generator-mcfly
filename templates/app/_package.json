{
    "name": "<%= _.slugify(appname) %>",
    "version": "0.0.1",
    "scripts": {
        "test": "gulp test"
    },
    "repository": {
        "type": "git",
        "url": ""
    },
    "dependencies": {
        "angular": "^1.3.16",
        "angular-animate": "^1.3.16",
        "angular-mocks": "^1.3.16",
        "angular-resource": "^1.3.16",
        "angular-sanitize": "^1.3.16",
        "angular-ui-router": "^0.2.15"<% if (ionic) { %>,
        "ionic-sdk":"^1.0.0"<% } %><% if (fontawesome) { %>,
        "font-awesome": "^4.3.0"<% } %><% if (famous) { %>,
        "famous": "^0.3.5",
        "famous-polyfills": "^0.3.0"<% } %><% if(ngCordova) { %>,
        "ng-cordova": "^0.1.17-alpha"<% } %><% if(bootstrap) { %>,
        "angular-bootstrap": "^0.12.0"<% } %><% if(material) { %>,
        "angular-material": "^0.10.0"<% } %><% if (bootstrap) { %>,
        "bootstrap": "3.3.5"<% } %>
    },
    "devDependencies": {
    },
    "engines": {
        "node": ">=0.10.0"
    },
    "browser": {
        "unitHelper": "./test/unit/unitHelper.js",
        "lbServices": "./client/scripts/lbServices.js"<% if (ionic) { %>,
        "ionic": "./node_modules/ionic-sdk/release/js/ionic.js",
        "ionic-angular": "./node_modules/ionic-sdk/release/js/ionic-angular.js"<% } %><% if(famous) { %>,
        "famous-angular": "./bower_components/famous-angular/dist/famous-angular.js"<% } %>
    },
    "browserify": {
        "transform": [
            ["babelify", { "stage": 0, "optional": ["es7.asyncFunctions", "runtime"], "ignore": ["./node_modules", "./bower_components"]}],
            "html2js-browserify",
            "jadeify",
            "cssify",
            "browserify-shim",
            "brfs"
        ]
    },
    "browserify-shim": {
        "lbServices": {
            "depends": [
            "angular-resource"
            ]
        }<% if(famous) { %>,
        "famous-angular": {
            "depends": [
              "famous-polyfills",
              "famous:famous",
              "angular",
              "angular-animate",
              "angular-sanitize",
              "angular-ui-router"
          ]
        }<% } %>

    }
}